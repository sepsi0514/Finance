@model WebFinance.Models.Wallet

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Wallet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Uid" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsCash" class="control-label"></label>
                <input id="IsCash" name="IsCash" type="checkbox" value="true" @(Model.IsCash ? "checked=\"checked\"" : "") />
                <span asp-validation-for="IsCash" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom;">
                <input asp-for="Color" value="@Model.Color" data-jscolor={}>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
