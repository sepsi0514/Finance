@model IEnumerable<WebFinance.Models.Wallet>

@{
    ViewData["Title"] = "Wallets";
}

<h1>Wallets</h1>

<p>
    <a type="button" class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <div class="card border border-primary" style="width: 18rem; margin: 10px; display:inline-block;">
        <div class="card-body" style="background: @(item.Color);">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <p class="card-text">@Html.DisplayFor(modelItem => item.Balance)</p>
        </div>        
        <a style="margin: 10px;" type="button" class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Uid"><i class="bi bi-pen"></i></a>
        <a style="margin: 10px;" type="button" class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Uid"><i class="bi bi-trash3"></i></a>
    </div>
}


</>
